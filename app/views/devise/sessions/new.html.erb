<h2>Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name), namespace: 'login') do |f| %>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, class: "text_box input_unfilled" %>
  </div>

  <div class="field">
    <%= f.label :password %><br />
    <%= f.password_field :password, autocomplete: "off", class: "text_box input_unfilled" %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end -%>

  <div class="actions">
    <%= f.submit "Log in", class: "green btn" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
