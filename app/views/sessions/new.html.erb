<% provide(:title, "Log In") %>
<% if logged_in? %>
  <h1>You are already logged in!</h1>
<% else %>
  <h1>Log In</h1>

  <%= form_for(:session, url: login_path) do |f| %>
    <div class="field">
      <%= f.label :email %>
      <%= f.text_field :email %>
    </div>
    <div class="field">
  	  <%= f.label :password %>
  	  <%= f.password_field :password %>
  	  <%= link_to "(forgot password?)", new_password_reset_path %>
    </div>
    <div class="field">
  	  <%= f.check_box :remember_me %>
  	  <%= f.label :remember_me %><span> on this computer</span>
   </div>
    <div class="actions">
  	  <%= f.submit "Log In", class: "green btn" %>
    </div>
  <% end %>

  <p>New Player?  <%= link_to "Sign up now!", new_player_path %></p>

<% end %>
